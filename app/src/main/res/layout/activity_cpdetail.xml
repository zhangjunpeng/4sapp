<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.test4s.activity.CPDetailActivity">
    <com.app.view.MyScrollView
        android:id="@+id/scrollView_cp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

    <RelativeLayout
        android:id="@+id/title_cp_s"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/titlebg"
        >

        <com.app.view.RoundImageView
            android:id="@+id/roundImage_cp"
            android:layout_width="120.33dp"
            android:layout_height="120.33dp"
            android:layout_marginTop="56dp"
            android:scaleType="fitXY"
            android:src="@drawable/a1"
            app:borderRadius="10dp"
            app:type="round"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/name_cpdetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:textSize="15.33dp"
            android:text="深圳逆风行科技有限公司"
            android:layout_below="@+id/roundImage_cp"
            android:layout_marginTop="26.33dp"
            android:layout_centerHorizontal="true"
            />
        <LinearLayout
            android:id="@+id/connect_cp"
            android:layout_width="126.67dp"
            android:layout_height="28dp"
            android:background="@drawable/borderradius"
            android:layout_below="@+id/name_cpdetail"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19.33dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/connect_green"
                android:layout_marginLeft="18dp"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15.33dp"
                android:layout_gravity="center_vertical"
                android:text="联系客服"
                android:textColor="#37E590"
                android:layout_marginLeft="8.33dp"
                />
            
        </LinearLayout>


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_cp_s"
        android:orientation="vertical"
        android:background="#FFF"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15.33dp"
            android:layout_marginTop="18.33dp"
            android:text="公司介绍"
            android:textColor="#343434"
            android:layout_marginLeft="14dp"

            />
        <TextView
            android:id="@+id/introuduction_cp_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:typeface="normal"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="10.66dp"
            android:lineSpacingExtra="3dp"
            android:text="撒大世家的卡死了看得见啊睡了多久啊是利空打击阿斯利康撒大世家的卡死了看得见啊睡了多久啊是利空打击阿斯利康撒大世家的卡死了看得见啊睡了多久啊是利空打击阿斯利康撒大世家的卡死了看得见啊睡了多久啊是利空打击阿斯利康撒大世家的卡死了看得见啊睡了多久啊是利空打击阿斯利康萨恢复了精神的符合贷款"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#B4B4B4"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="18.33dp"
            android:layout_marginRight="14dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15.33dp"
            android:layout_marginTop="18.33dp"
            android:text="公司信息"
            android:textColor="#343434"
            android:layout_marginLeft="14dp"

            />
        <TextView
            android:id="@+id/info_cp_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="10.66dp"
            android:text="所在地：深圳\n公司规模：50-100人\n电话：0755-26568888\n网址：www.4stest.com"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#B4B4B4"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="18.33dp"
            android:layout_marginRight="14dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15.33dp"
            android:layout_marginTop="18.33dp"
            android:text="cp其他游戏"
            android:textColor="#343434"
            android:layout_marginLeft="14dp"
            />
        <com.app.view.HorizontalListView
            android:id="@+id/other_game_cp"
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="10.66dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp" />
    </LinearLayout>
        </RelativeLayout>
    </com.app.view.MyScrollView>
    <include android:id="@+id/titel_cp"
        layout="@layout/titlebar_detail"/>
</RelativeLayout>
