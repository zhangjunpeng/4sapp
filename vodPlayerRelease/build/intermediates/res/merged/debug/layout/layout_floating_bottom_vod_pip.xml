<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="33dp"
    android:clickable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/bg_bottom"
        android:gravity="center_vertical"
        android:clickable="true"
        android:orientation="horizontal">
    <RelativeLayout
        android:id="@+id/play_pause_lay"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="12dp">

        <ImageView
            android:clickable="true"
            android:id="@+id/iv_pip_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_play" />

        <ImageView
            android:clickable="true"
            android:id="@+id/iv_pip_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_pause"
            android:visibility="gone" />
    </RelativeLayout>
    <SeekBar
        android:clickable="true"
        android:id="@+id/pip_seekbar"
        android:layout_width="800dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_weight="1"
        android:maxHeight="4dp"
        android:minHeight="4dp"
        android:progress="0"
        android:progressDrawable="@drawable/play_seekbar_style"
        android:secondaryProgress="0"
        android:thumb="@drawable/progress_thumb"
        android:thumbOffset="0dp" />

    <ImageView
        android:clickable="true"
        android:id="@+id/iv_pip_full_seletor"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="12dp"
        android:src="@drawable/icon_full"
        android:layout_marginRight="12dp" />
    </LinearLayout>
</LinearLayout>